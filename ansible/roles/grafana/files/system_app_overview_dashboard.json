{
  "id": null,
  "uid": "app_node_overview",
  "title": "Application & Node Overview",
  "tags": ["app","node","overview"],
  "timezone": "browser",
  "schemaVersion": 36,
  "version": 1,
  "panels": [
    {
      "type": "graph",
      "title": "HTTP Requests Total",
      "targets": [
        {
          "expr": "skillbox_http_requests_total",
          "legendFormat": "requests",
          "refId": "A"
        }
      ],
      "gridPos": {"x":0,"y":0,"w":12,"h":6}
    },
    {
      "type": "graph",
      "title": "HTTP Requests Rate",
      "targets": [
        {
          "expr": "rate(skillbox_http_requests_total[1m])",
          "legendFormat": "req/sec",
          "refId": "B"
        }
      ],
      "gridPos": {"x":12,"y":0,"w":12,"h":6}
    },
    {
      "type": "graph",
      "title": "CPU Usage (%)",
      "targets": [
        {
          "expr": "100 - (avg by(instance)(irate(node_cpu_seconds_total{mode='idle'}[5m])) * 100)",
          "legendFormat": "{{instance}}",
          "refId": "C"
        }
      ],
      "gridPos": {"x":0,"y":6,"w":12,"h":6}
    },
    {
      "type": "graph",
      "title": "Memory Available (MB)",
      "targets": [
        {
          "expr": "node_memory_MemAvailable_bytes / 1024 / 1024",
          "legendFormat": "MB",
          "refId": "D"
        }
      ],
      "gridPos": {"x":12,"y":6,"w":12,"h":6}
    },
    {
      "type": "graph",
      "title": "Disk Free (GB)",
      "targets": [
        {
          "expr": "node_filesystem_avail_bytes / 1024 / 1024 / 1024",
          "legendFormat": "GB",
          "refId": "E"
        }
      ],
      "gridPos": {"x":0,"y":12,"w":12,"h":6}
    },
    {
      "type": "graph",
      "title": "Network Traffic (Bytes/sec)",
      "targets": [
        {
          "expr": "rate(node_network_receive_bytes_total[1m])",
          "legendFormat": "rx",
          "refId": "F"
        },
        {
          "expr": "rate(node_network_transmit_bytes_total[1m])",
          "legendFormat": "tx",
          "refId": "G"
        }
      ],
      "gridPos": {"x":12,"y":12,"w":12,"h":6}
    }
  ]
}

